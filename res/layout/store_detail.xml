<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
		 
	<LinearLayout 
    android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	 android:orientation="horizontal"
	android:background="@drawable/logo_background"
	android:gravity="center"  >
		<ImageView 
		android:layout_gravity="center_vertical"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_marginBottom="2dip" 
		android:layout_marginTop="2dip" 
		android:background="@drawable/logo"
		 android:scaleType="centerCrop"
		  android:id="@+id/logo">
		</ImageView>	
	 </LinearLayout>
	 
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
<fragment
  android:id="@+id/map"
  android:layout_width="fill_parent"
  android:layout_height="130dp"
 class="com.google.android.gms.maps.SupportMapFragment"/>
	<!--  	 <fragment
        android:id="@+id/map_detail"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        class="com.google.android.gms.maps.MapFragment" />
        -->
</LinearLayout>
<ScrollView 
	android:layout_width="fill_parent" android:layout_height="wrap_content">
			
	<LinearLayout android:layout_width="fill_parent"
		 android:layout_height="wrap_content"
		android:orientation="vertical" android:layout_weight="1">
<RelativeLayout 
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#FFFFFF">
	<TextView android:id="@+id/store_name" android:layout_height="wrap_content"
	    android:textColor="#000000"
	    android:textStyle="bold"
		android:layout_width="wrap_content" 
		android:textSize="17sp"
		android:layout_marginTop="3dip" />
	>
	<TextView android:id="@+id/store_adresse_txt" android:text="Adresse:"
		android:layout_below="@+id/store_name" android:textColor="#333333"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:textSize="15sp" android:layout_marginTop="3dip" />
	>
	<TextView android:id="@+id/store_adresse"
	   android:textColor="#000000"
		android:layout_below="@+id/store_adresse_txt" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:textSize="15sp"
		android:layout_marginTop="3dip" />
	>
	<TextView android:id="@+id/store_tele_txt" android:text="Téléphone:"
		android:layout_below="@+id/store_adresse" android:textColor="#333333"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:textSize="15sp" android:layout_marginTop="3dip" />
	>
	<TextView android:id="@+id/store_tele" android:layout_below="@+id/store_tele_txt"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:textSize="15sp" android:layout_marginTop="3dip"
		android:textColor="#0033FF" android:textStyle="italic" />
	>
	<TextView android:id="@+id/store_fax_txt" android:text="Fax :"
		android:layout_below="@+id/store_tele" android:textColor="#333333"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:textSize="15sp" android:layout_marginTop="3dip" />
	>
	<TextView android:id="@+id/store_fax" android:layout_below="@+id/store_fax_txt"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:textSize="15sp" android:layout_marginTop="3dip"
		android:textColor="#0033FF" android:textStyle="italic"  />
	>
	<TextView android:id="@+id/store_email_txt" android:text="Email :"
		android:layout_below="@+id/store_fax" android:textColor="#333333"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:textSize="15sp" android:layout_marginTop="3dip" />
	>
	<TextView android:id="@+id/store_email" android:layout_below="@+id/store_email_txt"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:textSize="15sp" android:layout_marginTop="3dip" 
		android:textColor="#0033FF" android:textStyle="italic" />
	>
	<TextView android:id="@+id/store_billeterie_txt" android:text="Billeterie :"
		android:layout_below="@+id/store_email" android:textColor="#333333"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:textSize="15sp" android:layout_marginTop="3dip" />
	>
	<TextView android:id="@+id/store_billeterie"
	   android:textColor="#000000"
		android:layout_below="@+id/store_billeterie_txt" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:textSize="15sp"
		android:layout_marginTop="3dip" />
</RelativeLayout>
</LinearLayout>
</ScrollView>
</LinearLayout>